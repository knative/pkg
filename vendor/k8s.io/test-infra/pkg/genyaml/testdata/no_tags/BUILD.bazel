load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = ["example_config.go"],
    importpath = "k8s.io/test-infra/pkg/genyaml/testdata/no_tags",
    visibility = ["//visibility:public"],
)

filegroup(
    name = "test-data",
    srcs = glob(["*"]),
    visibility = ["//visibility:public"],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [":package-srcs"],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
